<h1><%= @list.name %></h1>

<div class="container w-50">
  <% if @list.bookmarks.any? %>
    <h4 class="text-center">Bookmarks</h4>
    <ul class="list-group">
      <% @list.bookmarks.each do |bookmark| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= bookmark.movie.title %>
          <span class=""><%= bookmark.comment %></span>
          <%# <%= link_to "delete", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> %>
        </li>
      <% end %>
    </ul>
  <% else  %>
    <p></p>
  <% end %>
</div>


<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
